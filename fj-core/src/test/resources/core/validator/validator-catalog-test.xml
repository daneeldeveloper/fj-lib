<validator-catalog bundle-path="core.validator.validator">

	<custom-messages locale="default">
		<message key='error.length.min'>Field "{0}" length is {1}, should be at least {2}.</message>
	</custom-messages>

	<custom-messages locale="it">
		<message key='error.length.min'>Il campo "{0}" ha lunghezza {1}, ma dovrebbe essere almeno {2}.</message>
	</custom-messages>

	<validator id="testDateValidator" 
		type="org.fugerit.java.core.validator.ValidatorDate"
		dateFormat="dd/MM/yyyy" minDate="01/01/2020" maxDate="31/12/2020"/>

	<validator id="testRegexValidator" 
		type="org.fugerit.java.core.validator.ValidatorRegex" 
		regex="^[a-zA-ZÀ-ž' \-\.,]*$" info="[A-ZÀ-ž]"/>

	<!-- inherit all attributes set in parent -->
	<validator id="testRegexValidatorExt" 
		type="org.fugerit.java.core.validator.ValidatorRegex" 
		minLength="2" maxLength="5" 
		parent="testRegexValidator"/>

</validator-catalog>
